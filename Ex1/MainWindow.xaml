<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="raceButton" Content="Запустить гонку данных" Click="RaceButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="safeButton" Content="Запустить безопасное добавление" Click="SafeButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="monitorButton" Content="Проверить монитор с таймаутом" Click="MonitorButton_Click"/>
        </StackPanel>

        <ListBox Grid.Row="1" x:Name="itemsListBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" x:Name="statusText" FontSize="14" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="3">
            <TextBlock x:Name="debugText" TextWrapping="Wrap" FontSize="12"/>
        </ScrollViewer>
    </Grid>
</Window>
