<Window x:Class="Ez2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ez2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <ListBox x:Name="LogBox" Height="300" Margin="0,5" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Старт" Click="StartButton_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Стоп" Click="StopButton_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
